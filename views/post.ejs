<html>
    <head>
        <title>post</title>
        <link rel="stylesheet" type="text/css" href="post.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    </head>
    <body>
        <div class="topBar">
            <div class="leftTopbar">
                <a href="/" class="home_link" style="color:rgb(80, 191, 158);">School System</a>
            </div>
            <div class="rightTopbar">
                <button class="TopDropbtn"><i class="profile bi-person-circle"></i></button>
                <div class="Topdropdown-content">
                    <a href="/profile" >View my Details</a>
                    <a  href="login.html">Log Out</a>
                </div>
            </div>
        </div>
    <!---------------------------------------------------------------------------------------------------------------->
    <div id="side_bar"  class="sidebar" onmouseover="Sidebar()" onmouseout="Sidebar()">
        <div class="side_bar_menu"><a href="#" class="side_bar_link"><div class="side_bar_menu_text"><i class="bi bi-clipboard-check sidenav_icons"></i><span  id="icon-text" class="icon-text">Assignments</span></a><br></div></div>
        <div class="side_bar_menu"><a href="#" class="side_bar_link"><div class="side_bar_menu_text"><i class="bi bi-calendar-event sidenav_icons"></i><span  id="icon-text1" class="icon-text">Calender</span></a><br></div></div>
        <div class="side_bar_menu"><a href="#" class="side_bar_link"><div class="side_bar_menu_text"><i class="bi bi-check-lg sidenav_icons"></i><span  id="icon-text2" class="icon-text">Attendance</span></a><br></div></div>
      </div>
    <!------------------------------------------------------------------------------------------------------------------>
    <div class="main_body">

        <div class="main_body">
            <h1><%= subject%></h1>
            <div class="posts">
                <%messages.forEach(post=>{%>
                <div class="post">
                    <div class="sender_detail">
                        <%=post.sender%> <br><%=post.time%>
                    </div>
                    <div class="message">
                        <%=post.message%>    
                    </div>
                </div>
                <%})%>
            </div>
            <div class="send">
                <input type="text" class="send_text" placeholder="What's on your mind?...">
                <button class="send_button"><i class="fa-solid fa-arrow-right fa-4x"></i></button>
            </div>
        </div>
    <script src="home_page.js"></script>
    </body>
</html>